<!-- Health Dashboard Section -->
<section id="dashboard">
    <h2>Your Health Summary</h2>

    <!-- Summary Stats -->
    <div id="summary-stats">
        <div class="stat">
            <span class="stat-title">Calories</span>
            <span id="calories-value" class="stat-value">1200/2000 kcal</span>
        </div>
        <div class="stat">
            <span class="stat-title">Hydration</span>
            <span id="hydration-value" class="stat-value">1.5/2 L</span>
        </div>
        <div class="stat">
            <span class="stat-title">Activity</span>
            <span id="activity-value" class="stat-value">5000 steps</span>
        </div>
    </div>

    <!-- Meal Log -->
    <div id="meal-log">
        <h3>Today's Meals</h3>
        <!-- Meal items will be dynamically added here -->
        <button id="add-meal-btn">+ Add Meal</button>
    </div>

    <!-- Vitamin Tracker -->
    <div id="vitamin-tracker">
        <h3>Vitamin Intake</h3>
        <!-- Vitamin intake items will be dynamically added here -->
    </div>

    <!-- Pill/Medication Reminders -->
    <div id="pill-reminders">
        <h3>Pill & Medication Schedule</h3>
        <ul id="pill-schedule">
        <!-- List of pills/medications will be dynamically added here -->
        </ul>
        <button id="add-pill-btn">+ Add Medication</button>
        </div>
        
        </section>

<!-- Calorie Tracker Section -->
<section id="calorie-tracker" class="health-section">
    <h2>Calorie Tracker</h2>

    <!-- Quick Add Meal Feature -->
    <div id="quick-add-meal">
        <h3>Add a Meal</h3>
        <input type="text" id="meal-name-input" placeholder="What did you eat?" aria-label="Meal Name">
        <input type="number" id="calorie-input" placeholder="Calories" aria-label="Calories">
        <button id="add-meal-submit" onclick="addMeal()">Add</button>
    </div>

    <!-- Meal Log Display -->
    <div id="meal-log-display">
        <h3>Today's Meal Log</h3>
        <ul id="meals-list">
            <!-- Dynamically populated list of meals and calories -->
        </ul>
    </div>

    <!-- Daily Caloric Intake Summary -->
    <div id="daily-intake-summary">
        <h3>Daily Intake Summary</h3>
        <canvas id="calorie-intake-chart"></canvas> <!-- Placeholder for a chart, requires JS library like Chart.js -->
    </div>
</section>



<!-- Hydration Tracker Section -->
<section id="hydration-tracker" class="health-section">
    <h2>Hydration Tracker</h2>
    
    <!-- Daily Hydration Goal -->
    <div id="hydration-goal">
        <h3>Daily Goal</h3>
        <p id="hydration-goal-value">Goal: 2L</p>
        <input type="range" id="hydration-goal-slider" min="1" max="4" value="2" step="0.1" aria-label="Daily hydration goal">
        <button id="update-hydration-goal">Update Goal</button>
    </div>

    <!-- Water Intake Log -->
    <div id="water-intake">
        <h3>Today's Intake</h3>
        <div id="water-intake-illustration">
            <!-- Dynamic water bottle or glass illustration -->
            <div id="water-level" style="height: 50%;"> <!-- Adjust height based on intake -->
                <span id="water-intake-value">1L</span>
            </div>
        </div>
        <button id="add-water-intake">+ Add 250ml</button>
    </div>

    <!-- Historical Data -->
    <div id="hydration-history">
        <h3>Intake History</h3>
        <canvas id="hydration-history-chart"></canvas> <!-- Placeholder for hydration history chart -->
    </div>
</section>




