<div class="account-container">
    <div class="user-info">
        <img id="profilePicturePreview" src="pictures\\nutranav.png" alt="Profile Picture">
        <h3 id="username">Username</h3>
    </div>
    <h2>Edit Your Profile</h2>
    <!-- Your form goes here -->

        <form id="profileForm" enctype="multipart/form-data">
            <div class="form-group">
                <label for="profile_picture">Profile Picture:</label>
                <input type="file" id="profile_picture" name="profile_picture">
            </div>
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" id="age" name="age">
            </div>
            <div class="form-group">
                <label for="gender">Gender:</label>
                <select id="gender" name="gender">
                    <option value="">Select Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="allergies">Allergies (comma-separated):</label>
                <input type="text" id="allergies" name="allergies">
            </div>
            <div class="form-group">
                <label for="dietary_preferences">Dietary Preferences (comma-separated):</label>
                <input type="text" id="dietary_preferences" name="dietary_preferences">
            </div>
            <div class="form-group">
                <label for="health_conditions">Health Conditions (comma-separated):</label>
                <input type="text" id="health_conditions" name="health_conditions">
            </div>
            <div class="form-group">
                <label for="fitness_goals">Fitness Goals (comma-separated):</label>
                <input type="text" id="fitness_goals" name="fitness_goals">
            </div>
            <div class="form-group">
                <label for="bio">Bio:</label>
                <textarea id="bio" name="bio"></textarea>
            </div>
            <button type="submit">Update Profile</button>
        </form>
    </div>




